{
  "name": "cross-copy",
  "description": "\"Copy text and links from the web for use on your phone\"",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "16": "icons/crosscopy16.png",
    "32": "icons/crosscopy32.png",
    "48": "icons/crosscopy.png",
    "128": "icons/crosscopy.png"
  },
  "browser_action": {
    "default_title": "cross-copy",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["clipboardRead"]
}
